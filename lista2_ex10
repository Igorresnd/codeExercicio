class Main {
  public static void main(String[] args) {
meta charset="UTF-8"

  var turno = prompt("Em qual turno você estuda ? Digite M para matutino, V para vespertino ou N para noturno");

  if (turno == "M") {
    alert("Bom dia!");
  }
  if (turno == "V") {
    alert("Boa tarde!");
  }

  if (turno == "N") {
    alert("Boa noite!");
  }

  else {
    alert("valor inválido");
  }

  }}
