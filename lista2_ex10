#include <stdio.h>
#include <stdlib.h>
  class Main {
  public static void main(String[] args)  {
 char sx;
    
    printf("Informe em que turno você estuda:");
    scanf("%c",&sx);
    
    if(sx=='m'||sx=='M'){
        printf("\nBom dia!");
    }else if(sx=='v'||sx=='V'){
        printf("\nBoa tarde!");
    }else if (sx=='n'||sx=='N'){
        printf("\nBoa noite!");
    }else{
        printf("\nValor inválido!");
    }
}}
