import java.util.Scanner;
class Main {
public static void main (String[]args){
    
  Scanner t1 = new Scanner (System.in);
    
  System.out.println ("Digite o valor do lado de um quadrado em metros:");

  double lado = t1.nextDouble();
  double area = lado*lado;
  double area2 = area+area;

  System.out.println ("O valor da área do quadrado em questão é: " + area + " metros.");
  
  System.out.println ("O valor " + area2 + " metros é o dobro da área do quadrado em questão.");
  
}
}
